# 1ra vez

python3 -m venv venv # creas el entorno virtual
source venv/bin/activate # activar el entorno virtual (linux)
source venv\Scripts\activate.bat # activa el entorno virtual (windows)

# 2da vez o +

source venv/bin/activate

